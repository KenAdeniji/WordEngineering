<Window x:Class="ProCSharp10WithNET6WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProCSharp10WithNET6WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="285" Width="325">
    <Grid>
		<Canvas Background="LightSteelBlue">
			<Button
				x:Name="btnOK" Canvas.Left="212" Canvas.Top="203" Width="80"
				Content="OK" Click="btnOK_Click"
			/>
			<Label 
				x:Name="lblInstructions" Canvas.Left="17" Canvas.Top="14"
				Width="328" FontSize="15" Content="Enter Information"
			/>
			<Label 
				x:Name="lblWord" Canvas.Left="17" Canvas.Top="60" 
				Width="328" Content="Word"
			/>
			<TextBox x:Name="txtWord" Canvas.Left="94" Canvas.Top="60"
				Width="193" Height="25"/>
			<Label 
				x:Name="lblForwardFor" Canvas.Left="17" Canvas.Top="109" 
				Width="328" Content="Forward"
			/>
			<Label 
				x:Name="lblForward" Canvas.Left="94" Canvas.Top="109" 
				Width="328"
			/>
			<Label 
				x:Name="lblBackwardFor" Canvas.Left="17" Canvas.Top="155" 
				Width="328" Content="Backward"
			/>
			<Label 
				x:Name="lblBackward" Canvas.Left="94" Canvas.Top="155" 
				Width="328"
			/>
		</Canvas>
    </Grid>
</Window>
