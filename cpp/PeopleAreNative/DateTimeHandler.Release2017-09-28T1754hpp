#ifndef DateTimeHandler_HPP
#define DateTimeHandler_HPP
 
namespace PeopleAreNative
{
	class DateTimeHandler
	{
		private:
			static long rdn(int y, int m, int d);
			
		public:
		static long dateDifference
		(
			int	fromYear,
			int	fromMonth,
			int	fromDay,	
			int	toYear,
			int	toMonth,
			int	toDay
		);
	};
	
	long call_DateTimeHandler_dateDifference		
	(
		int	fromYear,
		int	fromMonth,
		int	fromDay,	
		int	toYear,
		int	toMonth,
		int	toDay
	);
	
} 
#endif
